<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="is.a.amoneysharinggui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="is.a.amoneysharinggui.GlobalVarClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="is.a.amoneysharinggui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.ProductEditingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_activity2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.PRODUCTEDITINGACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.MemberEditingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_member_editing"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MEMBEREDITINGACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.MemberDeleteActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_member_delete"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.TransactionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_transaction"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.ProductEditActivity"
            android:label="@string/title_activity_product_edit"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.InstanceLoadActivity"
            android:label="@string/title_activity_instance_load"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="is.a.amoneysharinggui.InfoActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait" >
        </activity>
    </application>

    <supports-screens />

</manifest>