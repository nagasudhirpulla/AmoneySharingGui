<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#85CEFF" />

            <gradient android:angle="270" android:centerColor="#FFA500" android:endColor="#FFA500" android:startColor="#FFA500" />

            <corners android:radius="0sp" />
        </shape></item>
        <item android:state_pressed="false" android:state_focused="false"><shape android:shape="rectangle">
            <solid android:color="#85CEFF" />

            <gradient android:angle="270" android:centerColor="#00000000" android:endColor="#00000000" android:startColor="#00000000" />

            <corners android:radius="0sp" />
        </shape></item>
        <item android:state_pressed="true" android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#85CEFF" />

            <gradient android:angle="270" android:centerColor="#FFA500" android:endColor="#FFA500" android:startColor="#FFA500" />

            <corners android:radius="0sp" />
        </shape></item>
</selector>