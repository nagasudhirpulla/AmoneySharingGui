<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtview"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tick" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittxtview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgview"
        android:layout_toRightOf="@+id/txtview"
        android:background="@layout/buttonshape"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:text="1234"
        android:textSize="14sp" >
    </EditText>

    <ImageView
        android:id="@+id/alrtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edittxtview"
        android:layout_below="@+id/edittxtview"
        android:src="@drawable/no_alert_small" />

</RelativeLayout>