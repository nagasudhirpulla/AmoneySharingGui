<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <stroke android:width="1sp" android:color="#33b5e5" />

            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_focused="false"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <stroke android:width="1sp" android:color="#444444" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>